// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../../../data/data.db"
}

model Domain {
  pathId String @default(uuid())

  domain   String   @id
  date     DateTime @default(now())
  disabled Boolean

  password        String?
  twoFactorSecret String? @map("two_factor_secret")

  backupCodes String  @default("paperplane-cdn") @map("backup_codes")
  apiTokens   Token[]

  maxStorage    String @default("0 B") @map("max_storage")
  maxUploadSize String @default("0 B") @map("max_upload_size")

  extensionsList String @default("") @map("extensions_list")
  extensionsMode String @default("block") @map("extensions_mode")

  auditlogDuration String @map("audit_log_duration")
}

model Token {
  domain String @id

  token String
  date  DateTime @default(now())

  Domain       Domain? @relation(fields: [domainDomain], references: [domain])
  domainDomain String?
}

model SignupDomain {
  domain String   @id
  Date   DateTime @default(now())

  @@map("signup_domain")
}

model Invites {
  invite String   @id
  Date   DateTime @default(now())
}

model Auditlog {
  id   String   @id @unique @default(uuid())
  date DateTime @default(now())

  type    String
  user    String
  details String
}
